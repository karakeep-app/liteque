  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@tsconfig/node21": "^21.0.3",
    "@types/better-sqlite3": "^7.6.11",
    "drizzle-kit": "^0.24.02",
    "typescript": "^5.6.3",
    "vitest": "^1.3.1"
