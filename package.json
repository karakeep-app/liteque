{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "liteque",
  "description": "A sqlite-based job queue for Node.js",
  "author": "Mohamed Bassem <me@mbassem.com>",
  "version": "0.4.1",
  "type": "module",
  "main": "dist/index.js",
